{% extends 'base.html.twig' %}

{% block title %}Contactez la fabric{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/contact.css')}}">
{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-5 text-center mt-2">
                <img src="{{ asset('img/motifContact.jpg') }}" class="logoContact" alt="logoContact">
            </div>
            <div class="col-md-7 mt-2">
                <div class="listContact p-5">
                    <h5 class="mb-4 titreContact elephant">Comment me contacter : </h5>
                    <ul class="listContact">
                        <li class="mt-3 segeoUI"><span>e-mail</span> : lafabricdessublimes@hotmail.com</li>
                        <li class="mt-3 segeoUI"><span>portable</span> : 06.72.55.06.01</li>
                        <li class="mt-3 segeoUI"><span>par le formulaire, Ã  remplir ci-dessous</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                {% for message in app.flashes('message')  %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form_start(contactForm) }}
                <div class="form-group">
                    {{ form_widget(contactForm.email, {'attr': {'class':'formEmailNomPrenom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(contactForm.nom, {'attr': {'class':'formEmailNomPrenom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(contactForm.phone, {'attr': {'class':'formSujetPhone'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(contactForm.sujet, {'attr': {'class':'formSujetPhone'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(contactForm.fabric, {'attr': {'class':'formFabric'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(contactForm.message, {'attr': {'class':'formMessage'}}) }}
                </div>
                <button class="btn btn-fabric pull-right elephant buttonSub" type="submit">ENVOYER</button>


                {{ form_end(contactForm) }}
            </div>

        </div>
    </div>
{% endblock %}
